<div class="block" id="block-text">
  <div class="content">
    <h2 class="title"><%= I18n.t :statistics -%></h2>
    <div class="inner">
      <p>
	<%= tabnav :statistics %>
      </p>
      <p class="first">
	<% if @hosts_count_os == 0 %>
	  <%= I18n.t :nohost -%>
	<% else %>
  	  <% @hosts_count_os.each do |key, value| %>
	    <b><%= value %> <%= link_to key, :id => key %></b><br />
	  <% end %>
	<% end %>
      </p>

    </div>
  </div>
</div>
