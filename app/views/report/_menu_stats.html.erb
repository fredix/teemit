<div class="secondary-navigation"> 
  <%#= tabnav :statistics %>
  <ul class="wat-cf"> 
    <li<%= " class='active'" if current_page?(:controller => :report, :action => :all) %>><%= link_to I18n.t(:all), :controller => :report, :action => :all %></li> 
    <li<%= " class='active'" if current_page?(:controller => :report, :action => :uptimes) %>><%= link_to "uptime", :controller => :report, :action => :uptimes %></li> 
