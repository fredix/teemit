<div class="block" id="block-lists">
  <div class="content">
    <h2 class="title">
      <img class="avatar" src="/images/devices/stock_directory-server.png" alt="avatar" />
      <img class="avatar" src="/images/devices/stock_timezone.png" alt="avatar" />

      <br />
      <%= I18n.t :hosts -%> :  <%= @hosts_count %>
    </h2>
    <hr />
    <div class="actions-bar">
      <div class="pagination">
	<%= paginate @hosts %>
      </div>
    </div>

    <div class="inner">
      <ul class="list">
	
	<% @hosts.each do |host| %>
        <li>
          <div class="left">
              <a href=<%= url_for :action => :show, :uuid => host.uuid %>><%= avatar_host(host) %></a>

          </div>
          <div class="item">
            <p><b><%= I18n.t :hostname %> :</b>
	      <%= host.network.hostname %>
	    </p>
            <p><b>Last Modified :</b>
	      <%= host.updated_at %>
	    </p>




          </div>
        </li>

	<% end %>

      </ul>      
    </div>
  </div>
</div>
