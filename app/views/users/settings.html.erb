<div class="block" id="block-forms">
  <div class="content">
    <h2 class="title"><%= I18n.t(:settings) %></h2>
    <div class="inner">

      <p>
	<%= I18n.t(:api_key) %> :
	<b><%=h @user.authentication_token %></b>
      </p>

      <hr />

      <p>
	<%= I18n.t(:delete_account) %>
	<% form_for @user, :url => {:action => "delete"}, :html => {:class => "form"} do |f| %>
	<div class="group">
	  <%= f.error_messages %>
	  <div class="group navform">
	    <%= f.submit "#{I18n.t(:delete)}", :confirm => I18n.t(:delete_account_confirm), :html => {:class => "button"} %>  
	  </div>
	  <% end %>
	</div>
      </p>


 
    </div>
  </div>
</div>
