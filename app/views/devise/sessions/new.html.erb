<div id="box">
  <div class="block" id="block-login">
    <h2><%= I18n.t(:connection) %></h2>
    <div class="content login">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| -%>
      <%= f.error_messages %>

      <div class="group wat-cf">
	<div class="left">
	  <%= label(:email, :title, 'Email', :class => "label right") %>
	  <%#= label(:login, :title, 'Login', :class => "label right") %>
	</div>

	<div class="right">
	  <%= f.text_field :email, :class => "text_field" %>
	  <%#= f.text_field :login, :class => "text_field" %>
	</div>
	<div class="clear"></div>
      </div>

      <div class="group wat-cf">
	<div class="left">
	  <%= label(:password, :title, I18n.t(:password), :class => "label right") %>
	</div>
	<div class="right">
	  <%= f.password_field :password, :class => "text_field" %>
	</div>
	<div class="clear"></div>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="group wat-cf">
	<div class="left">
	  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
	</div>
	<div class="clear"></div>
      </div>
      <% end -%>


      <%#= link_to 'Twitter Authentication', url_for(session_path(:warden_oauth_provider => :twitter)) %>


      <br />
	
      <div class="group navform wat-cf">
        <div class="right">
	  <%#= f.submit I18n.t(:connection) %>
	  <button class="button" type="submit">
            <img src="/images/web-app-theme/icons/key.png" alt="Login" />   <%= I18n.t(:connection) %>
          </button>
	  <%#= oauth_login_button :value => I18n.t(:twitter) %>
        </div>
      </div>

      <% end -%>

      <%= render :partial => "devise/shared/devise_links" %>

    </div>
  </div>
</div>
